<!--pages/courseReBasic/courseReBasic.wxml-->
<view>
  <text class="basicInfo">课程基本信息</text>
  <form>
    <view class="basicItem">
      <text space="ensp">课程名称  </text>
      <input placeholder-style="color:gray" style="width:520rpx" placeholder="请输入课程名称" confirm-type="done"/>
    </view>
    <view class="basicItem">
      <text space="ensp">  类别    </text>
      <input placeholder-style="color:gray" style="width:520rpx" placeholder="请输入课程所属类别" confirm-type="done"/>
    </view>
    <view class="basicItem" style="margin-bottom:24rpx">
      <text space="ensp">  简介    </text>
      <input placeholder-style="color:gray" style="width:520rpx" placeholder="请输入课程简介" confirm-type="done"/>
    </view>
    
    <view class="basicItem">
      <text space="ensp">  讲师    </text>
      <input placeholder-style="color:gray" style="width:520rpx" placeholder="请输入课程讲师" confirm-type="done"/>
    </view>
    <view class="basicItem">
      <text space="ensp">  来源    </text>
      <input placeholder-style="color:gray" style="width:520rpx" placeholder="请输入课程来源" confirm-type="done"/>
    </view>
    <view class="basicItem">
      <text space="ensp"> 搜索词   </text>
      <input placeholder-style="color:gray" style="width:520rpx" placeholder="请输入课程搜索关键词" confirm-type="done"/>
    </view>

    <text class="basicInfo">加入条件</text>
    <view class="basicItem">
      <text space="ensp">所需积分  </text>
      <input placeholder-style="color:gray" style="width:520rpx" placeholder="所需积分值，免费则0" confirm-type="done"/>
    </view>
    <button class="nextStep">下一步</button>
  </form>
</view>