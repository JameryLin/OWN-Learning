/* pages/learnUser/learnUser.wxss */
.userInfo{
  display: flex;
}
.userName{
  display: flex;
  font-size: 40rpx;
  margin-top: 28rpx;
  margin-left: 28rpx;
}
.ownRoom{
  display: flex;
  font-size: 32rpx;
  margin-top: 36rpx;
}
.integral{
  display: flex;
  position: fixed;
  right: 40rpx;
  font-size: 28rpx;
  margin-top: 40rpx
}
.userBtArea{
  display: flex;
  padding: 60rpx 120rpx
}
.userButton{
  width: 168rpx;
  height: 90rpx;
  font-size: 36rpx;
  background-color: transparent;
  color: #1AAD19;
  border-radius: 8rpx
}
.userButton::after{
  border: 4rpx solid #1AAD19
}
.areaTitle{
  display: flex;
  font-size: 34rpx;
  margin-top: 40rpx;
  margin-bottom: 24rpx;
  margin-left: 28rpx;
  color: #000000;
  opacity: 0.7
}
.recommendItem{
  display: flex;
  flex-direction: column;
  height: 304rpx;
  padding: 30rpx;
  background-color:#fff;
  border-radius: 20rpx;
  border: 2rpx solid rgba(25, 173, 25, 0.6)
}
.recommendTitle{
  font-size: 34rpx;
  color: #000000;
  margin-bottom: 16rpx
}
.recommendIntro{
  font-size: 28rpx;
  color: #999999;
  margin-top: 10rpx
}
.userQuit{
  width: 120rpx;
  height: 70rpx;
  font-size: 30rpx;
  float: left;
  position: fixed;
  bottom: 0;
  margin-left: 48rpx;
  margin-bottom: 48rpx
}